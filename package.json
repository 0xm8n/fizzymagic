{
  "name": "fizzymagic",
  "version": "1.0.0",
  "license": "MIT",
  "keywords": [],
  "author": "",
  "files": [
    "artifacts",
    "contracts"
  ],
  "scripts": {
    "lint": "prettier ./test/*.ts --check",
    "lint:fix": "prettier ./test/*.ts --write",
    "format": "prettier --write contracts/**/*.sol *.js *.json test/**/*.js",
    "clean": "hardhat clean",
    "build": "hardhat compile",
    "rebuild": "hardhat clean && hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "node": "hardhat node",
    "deploy": "hardhat --network localhost deploy",
    "bsc:deploy": "hardhat --network bsctest deploy",
    "bsc:verify": "hardhat --network bsctest etherscan-verify --solc-input --license GPL-3.0 --force-license",
    "bscmain:deploy": "hardhat --network bscmain deploy",
    "bscmain:verify": "hardhat --network bscmain etherscan-verify --solc-input --license GPL-3.0 --force-license",
    "test:gas": "cross-env REPORT_GAS=true yarn test"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.12",
    "dotenv": "^14.3.0",
    "ethers": "^5.5.3",
    "hardhat": "^2.8.3",
    "prettier": "^2.5.1",
    "solidity-coverage": "^0.7.18",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.4.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.5"
  },
  "main": ".mocharc.js",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://git.lab.mbixtech.com/mbixtech/startups/fizzymagic.git"
  },
  "dependencies": {
    "chai": "^4.3.4",
    "mocha": "^9.2.0"
  }
}
