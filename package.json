{
  "name": "fizzymagic",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/Abracadabra-money/magic-internet-money",
  "license": "MIT",
  "keywords": [],
  "author": "",
  "scripts": {
    "clean": "hardhat clean",
    "build": "hardhat compile",
    "rebuild": "hardhat clean && hardhat compile",
    "node": "cross-env HARDHAT_LOCAL_NODE=1 hardhat node",
    "deploy": "hardhat --network hardhat deploy",
    "bsc:deploy": "hardhat --network bsc deploy",
    "bsc:verify": "hardhat --network bsc etherscan-verify --solc-input --license GPL-3.0 --force-license",
    "bsctn:deploy": "hardhat --network bsc_testnet deploy",
    "bsctn:verify": "hardhat --network bsc_testnet etherscan-verify --solc-input --license GPL-3.0 --force-license",
    "test": "cross-env TS_NODE_TRANSPILE_ONLY=1 hardhat test",
    "testcov": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" hardhat coverage --testfiles",
    "format": "prettier --write contracts/**/*.sol *.js *.json test/**/*.js",
    "pretty-quick": "pretty-quick",
    "test:gas": "cross-env REPORT_GAS=true yarn test"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.2"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.8.2",
    "prettier": "^2.5.1",
    "solidity-coverage": "^0.7.17"
  }
}
